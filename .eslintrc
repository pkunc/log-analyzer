{
	"parser": "babel-eslint",
	"extends": "airbnb",
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
	},
	"rules": {
		"func-names": ["error", "never"],
		"no-console": ["error", { allow: ["log", "warn", "error"] }],
		"max-len": [1, 160, 2, {ignoreComments: true, ignoreTrailingComments: true }],
		"space-infix-ops": 0,
		"no-unused-vars": [1, {"vars": "local", "args": "none"}],
		"react/forbid-prop-types": 0,
		"no-tabs": 0,
		"indent": ["error", "tab"],
	},
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
}
